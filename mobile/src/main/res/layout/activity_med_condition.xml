<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    android:paddingRight="48dp"
    android:paddingTop="50dp"
    android:paddingLeft="48dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MedCondShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical conditions"
            android:textSize="25dp"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/MedCondShow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/Allergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allergies"
            android:textSize="25dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/Allergies1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/curt_med"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current medications"
            android:textSize="25dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/curt_med1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/bloodtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood type"
            android:textSize="25dp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/bloodtype1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textSize="25dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/other1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:inputType="textPersonName" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/fab_button"
            app:layout_anchorGravity="bottom|right|end"/>

    </LinearLayout>



</RelativeLayout>