<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.healthwatch.Fragments.EmergencyContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/namePic"
            android:layout_width="49dp"
            android:layout_height="57dp"
            />

        <EditText
            android:id="@+id/emName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:hint="Full Name"
            android:inputType="text"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp"
            android:maxLines="1"
            android:imeOptions="actionNext"/>
        <ImageView
            android:id="@+id/namPic"
            android:layout_width="49dp"
            android:layout_height="57dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/passwordPic"
            android:layout_width="49dp"
            android:layout_height="57dp"
            />
        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:hint="Phone Number"
            android:inputType="phone"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp"
            android:maxLines="1"
            android:imeOptions="actionNext"/>

        <ImageView
            android:id="@+id/namPic2"
            android:layout_width="49dp"
            android:layout_height="57dp"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/PrimaryCont"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:text="Primary Contact" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/addbttn"
            android:layout_width="111dp"
            android:layout_height="64dp"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:background="@android:color/holo_blue_dark"
            android:text="ADD"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/cancelbttn"
            android:layout_width="111dp"
            android:layout_height="64dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Cancel"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_alignBottom="@+id/addbttn"
            android:layout_toLeftOf="@+id/addbttn"
            android:layout_toStartOf="@+id/addbttn" />


    </RelativeLayout>


</LinearLayout>