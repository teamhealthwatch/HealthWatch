<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Last_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DbDbDb"
    android:orientation="vertical"
    tools:context="com.example.android.healthwatch.RegisterActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/user_icon" />

        <EditText
            android:id="@+id/usertxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_weight="0.06"
            android:background="@android:color/background_light"
            android:hint="Username" />

    </LinearLayout>


    <EditText
        android:id="@+id/First_nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="244dp" />


    <EditText
        android:id="@+id/Last_nameText"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="244dp" />


    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/emailpic"
            android:layout_width="69dp"
            android:layout_height="46dp"
            app:srcCompat="@drawable/email3" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_weight="0.07"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/passwordPic"
            android:layout_width="69dp"
            android:layout_height="57dp"
            app:srcCompat="@drawable/password" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="Password"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/comfirmText"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:hint="Confirm Password"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="37dp"
        android:weightSum="1">

        <Button
            android:id="@+id/cancelbttn"
            android:layout_width="167dp"
            android:layout_height="29dp"
            android:background="@drawable/cancel_button"
            android:text="CANCEL" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/finishbttn"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_custom"
            android:text="SUBMIT"
           />

    </LinearLayout>

</LinearLayout>
