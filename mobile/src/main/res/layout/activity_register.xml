<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Last_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.healthwatch.RegisterActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login"
        tools:layout_editor_absoluteX="-37dp"
        tools:layout_editor_absoluteY="-44dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_weight="0.32">

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="47dp"
            android:layout_height="41dp"
            android:src="@drawable/user_icon"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="244dp" />

        <EditText
            android:id="@+id/usertxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/First_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Last_nametxt"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_weight="0.25">

        <ImageView
            android:id="@+id/emailpic"
            android:layout_width="69dp"
            android:layout_height="46dp"
            app:srcCompat="@drawable/email3" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_weight="0.01"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/passwordPic"
            android:layout_width="69dp"
            android:layout_height="57dp"
            app:srcCompat="@drawable/password" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="Password"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/comfirmText"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:hint="Confirm Password"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="244dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.69">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="37dp"
            android:weightSum="1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/cancelbttn"
                android:layout_width="167dp"
                android:layout_height="39dp"
                android:layout_centerInParent="true"
                android:layout_weight="0.61"
                android:background="@drawable/cancel_button"
                android:text="CANCEL" />

            <Button
                android:id="@+id/finishbttn"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="0.61"
                android:background="@drawable/button_custom"
                android:text="NEXT" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
