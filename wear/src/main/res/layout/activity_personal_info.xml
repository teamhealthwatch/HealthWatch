<?xml version="1.0" encoding="utf-8"?>

<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="com.example.android.healthwatch.Activity.PersonalInfoActivity"
    tools:deviceIds="wear"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/inner_frame_layout_padding"
        app:boxedEdges="all">

        <TextView
            android:id="@+id/cond_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical conditions"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/input_cond_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/allergies_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allergies"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/input_allergies_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/current_med_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current medications"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/input_current_med_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/blood_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood type"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/input_blood_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/other_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/input_other_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </LinearLayout>
</android.support.wear.widget.BoxInsetLayout>

