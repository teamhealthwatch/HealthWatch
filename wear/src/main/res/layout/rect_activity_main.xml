<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1e1e1"
    tools:context="com.example.android.healthwatch.Activities.MainActivity"
    tools:deviceIds="wear_square"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <ImageView
            android:id="@+id/hwicon"
            android:layout_width="73dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:cropToPadding="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="@string/welcome"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.WearDiag.Title"
            android:textColor="#ba0c0c" /><![CDATA[



    />



]]>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="74dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:text="75"
            android:textAppearance="@style/TextAppearance.Wearable.Large"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BPM"
            android:textColor="#000000" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/watch_button"
            android:text="Stop"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Space
            android:id="@+id/space2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="14dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imageView8"
            android:src="@drawable/current_page"
            android:layout_alignTop="@+id/imageView8" />

        <Space
            android:id="@+id/space3"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/space2"
            android:layout_toStartOf="@+id/space2"
            android:src="@drawable/other_page" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/space2"
            android:layout_toRightOf="@+id/space2"
            android:src="@drawable/other_page" />

        <Space
            android:id="@+id/space4"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView9" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space2"
            android:layout_toEndOf="@+id/space4"
            android:src="@drawable/other_page" />

    </RelativeLayout>


</LinearLayout>
